{
  "extends": ["react-app", "prettier"],
  "plugins": ["react", "prettier"],
  "rules": {
    "prettier/prettier": [
      "warn",
      {
        "arrowParens": "avoid",
        "semi": true,
        "singleQuote": true,
        "jsxSingleQuote": false,
        "quoteProps": "preserve",
        "trailingComma": "all",
        "tabWidth": 2,
        "useTabs": false,
        "bracketSameLine": false,
        "printWidth": 80,
        "endOfLine": "auto"
      }
    ],
    "no-console": "warn"
  }
}
